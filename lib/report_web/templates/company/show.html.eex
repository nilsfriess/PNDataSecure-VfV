<h2>Show Company</h2>

<ul>

  <li>
    <strong>Address:</strong>
    <%= @company.address %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @company.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @company.email %>
  </li>

  <li>
    <strong>Phone:</strong>
    <%= @company.phone %>
  </li>

</ul>

<span><%= link "Edit", to: company_path(@conn, :edit, @company) %></span>
<span><%= link "Back", to: company_path(@conn, :index) %></span>
